<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/erd"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/grade"
        android:layout_alignBottom="@+id/grade"
        android:layout_alignEnd="@+id/DisplayButton"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/erd2"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/spinner_convert_from"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="14dp"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/grade"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/erd2"
        android:layout_marginTop="29dp"
        android:textSize="24dp" />

    <Spinner
        android:id="@+id/spinner_convert_from"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/DisplayButton"
        android:layout_alignTop="@+id/spinner_convert"
        android:layout_marginEnd="13dp">

    </Spinner>

    <Spinner
        android:id="@+id/spinner_convert"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/erd2"
        android:layout_below="@+id/textView">

    </Spinner>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="10dp"
        android:text="Select Hotel"
        android:textColor="#000"
        android:textSize="20dp" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="34dp"
        android:popupBackground="#FFFF99" />

    <EditText
        android:id="@+id/name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/spinner1"
        android:gravity="center"
        android:hint="Name" />

    <EditText
        android:id="@+id/phone_number"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/spinner1"
        android:layout_marginTop="49dp"
        android:gravity="center"
        android:hint="Address" />

    <Button
        android:id="@+id/submit"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignStart="@+id/spinner_convert"
        android:layout_below="@+id/grade"
        android:layout_marginTop="50dp"
        android:text="Submit" />

    <Button
        android:id="@+id/DisplayButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/submit"
        android:layout_alignBottom="@+id/submit"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:text="View Order" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/spinner"
        android:layout_below="@+id/phone_number"
        android:layout_marginTop="15dp"
        android:text="count" />

</RelativeLayout>